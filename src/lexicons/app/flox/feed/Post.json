{
    "lexicon": 1,
    "id": "app.flox.feed.Post",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record containing a Flox post with encrypted content.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "flokRef",
                    "token",
                    "content",
                    "createdAt"
                ],
                "properties": {
                    "flokRef": {
                        "type": "string",
                        "description": "A reference used to identify the Flok."
                    },
                    "token": {
                        "type": "string",
                        "description": "A unique token used for validating references."
                    },
                    "content": {
                        "type": "string",
                        "description": "Base64-encoded string containing the encrypted content."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Client-declared timestamp when this post was created."
                    }
                }
            }
        }
    }
}