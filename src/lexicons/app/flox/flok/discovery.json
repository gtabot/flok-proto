{
    "lexicon": 1,
    "id": "app.flox.flok.discovery",
    "defs": {
        "main": {
            "type": "record",
            "description": "Public discovery record for a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "enabled",
                    "createdAt",
                    "updatedAt"
                ],
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "description": "Whether this Flok should appear in discovery"
                    },
                    "flokRef": {
                        "type": "string",
                        "description": "A reference used to identify the Flok when discovery is enabled"
                    },
                    "token": {
                        "type": "string",
                        "description": "A unique token used for validating references when discovery is enabled"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "When this discovery record was created"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "When this discovery record was last updated"
                    }
                }
            }
        }
    }
}