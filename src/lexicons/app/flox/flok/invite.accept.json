{
    "lexicon": 1,
    "id": "app.flox.flok.invite.accept",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record for accepting an invitation to join a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "inviteId",
                    "flokId",
                    "invitedId",
                    "createdAt"
                ],
                "properties": {
                    "inviteId": {
                        "type": "string",
                        "description": "ID of the invite being accepted"
                    },
                    "flokId": {
                        "type": "string",
                        "description": "The Flok being joined"
                    },
                    "invitedId": {
                        "type": "string",
                        "description": "DID of the user accepting the invite"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this acceptance was created"
                    }
                }
            }
        }
    }
}