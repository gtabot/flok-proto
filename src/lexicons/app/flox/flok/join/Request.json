{
    "lexicon": 1,
    "id": "app.flokx.flok.join.request",
    "defs": {
        "main": {
            "type": "record",
            "description": "A request to join a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "joinRequestId",
                    "flokId",
                    "requesterId",
                    "createdAt"
                ],
                "properties": {
                    "joinRequestId": {
                        "type": "string",
                        "description": "Unique identifier for the join request"
                    },
                    "flokId": {
                        "type": "string",
                        "description": "Unique identifier for the Flok"
                    },
                    "requesterId": {
                        "type": "string",
                        "description": "Unique identifier for the requester"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime"
                    }
                }
            }
        }
    }
}