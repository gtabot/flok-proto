{
    "lexicon": 1,
    "id": "app.flox.flok.join.Request",
    "defs": {
        "main": {
            "type": "record",
            "description": "A request to join a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "flokRef",
                    "token",
                    "content",
                    "createdAt"
                ],
                "properties": {
                    "joinRequestId": {
                        "type": "string",
                        "description": "Unique identifier for the join request"
                    },
                    "flokRef": {
                        "type": "string",
                        "description": "Reference to the Flok being requested to join"
                    },
                    "token": {
                        "type": "string",
                        "description": "Validation token"
                    },
                    "content": {
                        "type": "string",
                        "description": "Base64-encoded string containing the encrypted content"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime"
                    }
                }
            }
        }
    }
}