{
    "lexicon": 1,
    "id": "app.flox.flok.flok.update",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record of a change to a Flok's configuration.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "flokId",
                    "updaterId",
                    "changes",
                    "createdAt"
                ],
                "properties": {
                    "flokId": {
                        "type": "string",
                        "description": "The Flok being updated"
                    },
                    "updaterId": {
                        "type": "string",
                        "description": "DID of the admin making the update"
                    },
                    "changes": {
                        "type": "array",
                        "items": {
                            "type": "ref",
                            "ref": "#change"
                        },
                        "description": "List of changes made in this update"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "When this update was made"
                    }
                }
            }
        },
        "change": {
            "type": "object",
            "required": [
                "field",
                "oldValue",
                "newValue"
            ],
            "properties": {
                "field": {
                    "type": "string",
                    "description": "The field that was changed"
                },
                "oldValue": {
                    "type": "unknown",
                    "description": "Previous value of the field"
                },
                "newValue": {
                    "type": "unknown",
                    "description": "New value of the field"
                }
            }
        }
    }
}