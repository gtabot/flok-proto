{
    "lexicon": 1,
    "id": "app.flokx.flok.inviteActor",
    "defs": {
        "main": {
            "type": "record",
            "description": "An invitation for a user to join a Flok.",
            "key": "cid",
            "record": {
                "type": "object",
                "required": [
                    "inviteId",
                    "content",
                    "createdAt",
                    "expiresAt"
                ],
                "properties": {
                    "inviteId": {
                        "type": "string",
                        "description": "The unique identifier for the invite."
                    },
                    "content": {
                        "type": "string",
                        "description": "Base64-encoded string containing the encrypted content."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this record was created."
                    },
                    "expiresAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Optional expiration time for the invite."
                    }
                }
            }
        }
    }
}