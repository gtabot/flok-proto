{
    "lexicon": 1,
    "id": "app.flokx.flok.acceptInvite",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record for accepting an invitation to join a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "content",
                    "createdAt"
                ],
                "properties": {
                    "content": {
                        "type": "string",
                        "description": "Base64-encoded string containing the encrypted content."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this acceptance was created."
                    }
                }
            }
        }
    }
}