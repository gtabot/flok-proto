{
    "lexicon": 1,
    "id": "app.flokx.flok.invite.send",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record for sending an invitation for a user to join a Flok.",
            "key": "cid",
            "record": {
                "type": "object",
                "required": [
                    "inviteId",
                    "invite",
                    "createdAt",
                    "expiresAt"
                ],
                "properties": {
                    "encryptedInvite": {
                        "type": "string",
                        "description": "Base64-encoded string containing the encrypted invite."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this invitation was created."
                    }
                }
            }
        }
    }
}