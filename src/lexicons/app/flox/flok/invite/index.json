{
    "lexicon": 1,
    "id": "app.flokx.flok.invite",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record for invitation to join a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "flokId",
                    "inviteId",
                    "inviterId",
                    "inviteeId",
                    "createdAt",
                    "expiresAt"
                ],
                "properties": {
                    "flokId": {
                        "type": "string",
                        "description": "The unique identifier for the Flok."
                    },
                    "inviteId": {
                        "type": "string",
                        "description": "The unique identifier for the invite."
                    },
                    "inviterId": {
                        "type": "string",
                        "description": "The unique identifier for the inviter."
                    },
                    "inviteeId": {
                        "type": "string",
                        "description": "The unique identifier for the invitee."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this acceptance was created."
                    },
                    "expiresAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this invitation expires."
                    }
                }
            }
        }
    }
}