{
    "lexicon": 1,
    "id": "app.flokx.flok.invite.accept",
    "defs": {
        "main": {
            "type": "record",
            "description": "Record for accepting an invitation to join a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "encryptedInvite",
                    "createdAt",
                    "expiresAt"
                ],
                "properties": {
                    "encryptedInvite": {
                        "type": "string",
                        "description": "Base64-encoded string containing the encrypted invite."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this acceptance was created."
                    },
                    "expiresAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "Timestamp when this invitation expires."
                    }
                }
            }
        }
    }
}