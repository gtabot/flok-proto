{
    "lexicon": 1,
    "id": "app.flox.flok.joinCode",
    "defs": {
        "main": {
            "type": "record",
            "description": "Current join code for a Flok.",
            "key": "tid",
            "record": {
                "type": "object",
                "required": [
                    "joinCode",
                    "flokId",
                    "createdAt"
                ],
                "properties": {
                    "joinCode": {
                        "type": "string",
                        "description": "Current code required to join the Flok"
                    },
                    "alias": {
                        "type": "string",
                        "description": "Alias for the join code"
                    },
                    "flokId": {
                        "type": "string",
                        "description": "The Flok this join code is for"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "datetime",
                        "description": "When this join code was created"
                    }
                }
            }
        }
    }
}